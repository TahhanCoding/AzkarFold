<style>
  /* Hero Section */
  .hero {
    background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 50%, #f8fafc 100%);
    padding: calc(80px + var(--space-12)) 0 var(--space-20);
    position: relative;
    overflow: hidden;
    min-height: 100vh;
    display: flex;
    align-items: center;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23e1f5fe' fill-opacity='0.1'%3E%3Cpath d='M30 30c0-11.046-8.954-20-20-20s-20 8.954-20 20 8.954 20 20 20 20-8.954 20-20zm0 0c0 11.046 8.954 20 20 20s20-8.954 20-20-8.954-20-20-20-20 8.954-20 20z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    opacity: 0.5;
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-12);
    align-items: center;
    position: relative;
    z-index: 1;
  }

  .app-icon {
    font-size: 4rem;
    margin-bottom: var(--space-4);
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
    border-radius: var(--radius-xl);
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: var(--shadow-xl);
  }

  .hero-text h1 {
    font-size: 3.5rem;
    margin-bottom: var(--space-4);
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .tagline {
    font-size: 1.5rem;
    color: var(--color-gray-600);
    margin-bottom: var(--space-6);
    font-weight: 500;
  }

  .description {
    font-size: 1.125rem;
    color: var(--color-gray-700);
    margin-bottom: var(--space-8);
    line-height: 1.7;
  }

  .hero-actions {
    display: flex;
    gap: var(--space-4);
    align-items: center;
  }

  .phone-mockup {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .phone-frame {
    width: 280px;
    height: 560px;
    background: linear-gradient(145deg, #2a2a2a, #1a1a1a);
    border-radius: 40px;
    padding: 20px;
    box-shadow: var(--shadow-xl);
    position: relative;
  }

  .phone-screen {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--color-primary-light), var(--color-secondary));
    border-radius: 30px;
    padding: var(--space-6);
    display: flex;
    flex-direction: column;
  }

  .placeholder-content {
    color: white;
    text-align: center;
  }

  .placeholder-header {
    height: 40px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: var(--radius-lg);
    margin-bottom: var(--space-6);
  }

  .placeholder-items {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .placeholder-item {
    height: 60px;
    background: rgba(255, 255, 255, 0.15);
    border-radius: var(--radius-lg);
  }

  /* App Overview */
  .app-overview {
    padding: var(--space-20) 0;
    background-color: var(--color-white);
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-16);
  }

  .section-header h2 {
    margin-bottom: var(--space-4);
  }

  .section-header p {
    font-size: 1.125rem;
    color: var(--color-gray-600);
    max-width: 600px;
    margin: 0 auto;
  }

  .overview-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-8);
  }

  .overview-card {
    background: var(--color-white);
    padding: var(--space-8);
    border-radius: var(--radius-xl);
    text-align: center;
    box-shadow: var(--shadow-md);
    border: 1px solid var(--color-gray-100);
    transition: all var(--transition-normal);
  }

  .overview-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
  }

  .card-icon {
    font-size: 3rem;
    margin-bottom: var(--space-4);
    background: linear-gradient(135deg, var(--color-primary-light), var(--color-accent));
    border-radius: var(--radius-lg);
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto var(--space-4);
  }

  .overview-card h3 {
    margin-bottom: var(--space-3);
  }

  .overview-card p {
    color: var(--color-gray-600);
    margin: 0;
  }

  /* Features */
  .features {
    padding: var(--space-20) 0;
    background-color: var(--color-gray-50);
  }

  .features-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-12);
    align-items: center;
  }

  .features-text h2 {
    margin-bottom: var(--space-8);
  }

  .features-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .feature-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
  }

  .feature-icon {
    background: var(--color-success);
    color: var(--color-white);
    width: 24px;
    height: 24px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.875rem;
    font-weight: 600;
    flex-shrink: 0;
  }

  .feature-showcase {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .showcase-item {
    background: var(--color-white);
    padding: var(--space-6);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    text-align: center;
  }

  .showcase-icon {
    font-size: 2.5rem;
    margin-bottom: var(--space-3);
  }

  .showcase-item h4 {
    margin-bottom: var(--space-2);
  }

  .showcase-item p {
    color: var(--color-gray-600);
    margin: 0;
  }

  /* Screenshots */
  .screenshots {
    padding: var(--space-20) 0;
    background-color: var(--color-white);
  }

  .screenshots-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-8);
  }

  .screenshot-item {
    text-align: center;
  }

  .screenshot-placeholder {
    background: linear-gradient(135deg, var(--color-gray-100), var(--color-gray-200));
    border-radius: var(--radius-lg);
    padding: var(--space-12) var(--space-6);
    margin-bottom: var(--space-4);
    min-height: 300px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--space-3);
    border: 2px dashed var(--color-gray-300);
  }

  .placeholder-icon {
    font-size: 3rem;
    opacity: 0.7;
  }

  .screenshot-placeholder p {
    color: var(--color-gray-500);
    font-weight: 500;
    margin: 0;
  }

  .screenshot-item h4 {
    margin-bottom: var(--space-2);
  }

  .screenshot-item p {
    color: var(--color-gray-600);
    font-size: 0.875rem;
    margin: 0;
  }

  /* CTA */
  .cta {
    padding: var(--space-20) 0;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
    color: var(--color-white);
  }

  .cta-content {
    text-align: center;
  }

  .cta h2 {
    color: var(--color-white);
    margin-bottom: var(--space-4);
  }

  .cta p {
    font-size: 1.125rem;
    margin-bottom: var(--space-8);
    opacity: 0.9;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero {
      padding: calc(80px + var(--space-8)) 0 var(--space-12);
      min-height: auto;
    }

    .hero-content {
      grid-template-columns: 1fr;
      text-align: center;
      gap: var(--space-8);
    }

    .hero-text h1 {
      font-size: 2.5rem;
    }

    .tagline {
      font-size: 1.25rem;
    }

    .hero-actions {
      justify-content: center;
      flex-wrap: wrap;
    }

    .phone-frame {
      width: 240px;
      height: 480px;
    }

    .features-content {
      grid-template-columns: 1fr;
      gap: var(--space-8);
    }

    .overview-grid {
      grid-template-columns: 1fr;
    }

    .screenshots-grid {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    }

    .hero-actions {
      flex-direction: column;
      align-items: center;
    }
  }

  @media (max-width: 480px) {
    .hero-actions {
      width: 100%;
    }
    
    .hero-actions .btn,
    .hero-actions .app-store-button {
      width: 100%;
      justify-content: center;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Add fade-in animation on scroll
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.style.animationDelay = '0.1s';
          entry.target.classList.add('fade-in');
        }
      });
    }, observerOptions);

    document.querySelectorAll('.fade-in').forEach(el => {
      observer.observe(el);
    });
  });
</script>
</Layout>